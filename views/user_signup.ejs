<link rel="stylesheet" href="/css/signup.css">
<div class="container">
    <h1>Sign up page</h1>
    <form action="/users/create" method="POST">
        <input type="text" name="name" placeholder="name" required>
        <input type="email" name="email" placeholder="email" required >
        <input type="password" name="password" placeholder="password" required>
        <input type="password" name="confirm_password" placeholder="confirm" required>
        <input type="submit" value="sign up">
    </form>
    <hr style="height: 4px; background-color: rgb(2, 63, 56); border: none;">
    <h2>SignIn / SignUp using Google</h2>

    <p>
        <a href="/users/auth/google"> <button>Google SignIn / SignUp</button></a>
    </p>
</div>